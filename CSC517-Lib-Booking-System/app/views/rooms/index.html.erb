<p id="notice"><%= notice %></p>

<h1>Rooms</h1>
<table id="room_index">
  <thead>
    <tr>
      <th style="width: 100px">Room #</th>
      <th style="width: 100px">Size</th>
      <th style="width: 200px">Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.size %></td>
        <td><%= room.building %></td>
        <td id="show"><%= link_to 'Detail', room %></td>
        <% if isAdmin? %>
            <td id="edit"><%= link_to 'Edit', edit_room_path(room) %></td>
            <td id="delete"><%= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td id="history"><%= link_to 'Booking History', show_room_history_path(:number => room.number, :building => room.building) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</br>
<div class="actions", id="button">
  <%= link_to 'Add Room', new_room_path, class:"btn btn-danger" if isAdmin? %>
</div>
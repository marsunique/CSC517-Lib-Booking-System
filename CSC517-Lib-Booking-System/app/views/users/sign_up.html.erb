<% provide(:title, "Sign Up") %>
<h1>Creat Your Account</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="field">
          <%= hidden_field_tag("user[authority]", '0') %>
        </div>

        <div class="actions", id="button">
          <%= f.submit "Create", class: "btn btn-danger" %>
          <%= link_to 'Cancel', login_path, class: "btn btn-primary"%>
        </div>
    <% end %>

  </div>
</div>
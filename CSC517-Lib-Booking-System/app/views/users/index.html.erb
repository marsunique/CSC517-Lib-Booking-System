<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table id="user_index">
  <thead>
    <tr>
      <th style="width: 300px">Email</th>
      <th style="width: 150px">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td id="show"><%= link_to 'Show', user %></td>
        <td id="edit"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td id="delete"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add User', new_user_path %>
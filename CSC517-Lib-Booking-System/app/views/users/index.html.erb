<p id="notice"><%= notice %></p>
<div>
<h1>Users</h1>

<table id="user_index">
  <thead>
    <tr>
      <th style="width: 250px">Email</th>
      <th style="width: 200px">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |f| %>
      <tr>
        <td><%= f.email %></td>
        <td><%= f.name %></td>
        <td id="show"><%= link_to 'Detail', f %></td>
        <td id="delete"><%= link_to 'Delete', f, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td id="history"><%= link_to 'Booking History', show_user_history_path(:email => f.email) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="actions", id="button">
    <%= link_to 'Add User', new_user_path, class:"btn btn-danger" %>
</div>
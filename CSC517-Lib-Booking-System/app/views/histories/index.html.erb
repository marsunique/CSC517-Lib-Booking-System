<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th style="width: 100px">Number</th>
      <th style="width: 100px">Building</th>
      <th style="width: 250px">Email</th>
      <th style="width: 150px">Date</th>
      <th style="width: 100px">Begin Time</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.number %></td>
        <td><%= history.building %></td>
        <td><%= history.email %></td>
        <td><%= history.date %></td>
        <td><%= history.begintime %></td>
        <td style="width: 75px"><%= link_to 'Show', history %></td>
        <td style="width: 140px"><%= link_to 'Cancel Reservation', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions", id="button">
  <%= link_to 'New History', new_history_path, class:"btn btn-danger"%>
</div>
